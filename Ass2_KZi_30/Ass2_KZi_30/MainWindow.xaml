<Window x:Class="Ass2_KZi_30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ass2_KZi_30"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Height="280" Margin="40,45,0,0" VerticalAlignment="Top" Width="330"
                  Name="lapTimeDisplay"/>
        <Label Content="00:00:000" HorizontalAlignment="Left" Margin="410,45,0,0" VerticalAlignment="Top" Height="105" Width="270" Name="clockDisplay" FontSize="60"/>
        <Button Content="LAP" HorizontalAlignment="Left" Margin="490,220,0,0" VerticalAlignment="Top" Width="75" Name="lapButton" Click="getLapTime" FontSize="25"/>
        <Button Content="Reset" HorizontalAlignment="Left" Margin="490,285,0,0" VerticalAlignment="Top" Width="75" Click="resetTimer"/>


    </Grid>
</Window>
